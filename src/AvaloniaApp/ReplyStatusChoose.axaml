<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApp.ReplyStatusChoose"
        Title="Choose action" MaxWidth="150" MaxHeight="224" MinWidth="150" MinHeight="224" HasSystemDecorations="false" ShowInTaskbar="False">
	<Grid RowDefinitions="auto,auto,auto,auto">
		<RadioButton Grid.Row="0" Tag="1" Name="rbOk">OK</RadioButton>
		<RadioButton Grid.Row="1" Tag="2" Name="rbMailboxUnavailable">Mailbox unavailable</RadioButton>
		<RadioButton Grid.Row="2" Tag="3" Name="rbInsufficientSystemStorage">Insufficient system storage</RadioButton>
		<RadioButton Grid.Row="3" Tag="4" Name="rbError">Error</RadioButton>
	</Grid>
</Window>